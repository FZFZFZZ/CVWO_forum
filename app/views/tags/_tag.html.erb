<div id="<%= dom_id tag %>">
  <p>
    <strong>Name:</strong>
    <%= tag.name %>
  </p>

<h2>Related Movies</h2>
  <% if @top_rated_articles.present? %>
    <% @top_rated_articles.each do |article| %>
      <a href="<%= article_path(article) %>">
      <%= article.title %>
      <br/>
    <% end %>
  <% else %>
    <p>No related movies found.</p>
  <% end %>
</div>


