<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container-fluid">
    <span class="navbar-brand" style="font-family: 'Verdana' ">Hello, <%= current_user.username %>!</span>
      <span class="greeting" style="color: lightgrey; font-size: 14px; font-family: 'Lucida Handwriting', cursive">
        <% current_time = Time.now %>
        <% if current_time.hour >= 5 && current_time.hour < 9 %>
          Guten Morgen!
        <% elsif current_time.hour >= 9 && current_time.hour < 12 %>
          Be aware! Your Boss is around!
        <% elsif current_time.hour >= 12 && current_time.hour < 14 %>
          You deserve a good nap~
        <% elsif current_time.hour >= 14 && current_time.hour < 18 %>
          GOOD ENOUGH is the best!
        <% elsif current_time.hour >= 18 && current_time.hour < 20 %>
          饮茶先啦~
        <% elsif current_time.hour >= 20 && current_time.hour < 23 %>
          Consider watching a movie with your love?
        <% elsif current_time.hour >= 23 && current_time.hour < 24 %>
          Margarita for tonight, still?
        <% else %>
          Sleep early, poor 吗喽 :(
        <% end %>
        <span style="border-bottom: 3px solid white; margin: 0 10px;"></span>
      </span>
     

    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to user_path(current_user), class: "nav-link hoverable" do %>
          <i class="fas fa-home"></i>
          <span class="tipshown">My Profile</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to destroy_user_session_path, method: :delete, class: "nav-link hoverable" do %>
          <i class="fas fa-sign-out-alt"></i>
          <span class="tipshown">Sign out</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to edit_user_registration_path, class: "nav-link hoverable" do %>
          <i class="fas fa-cog"></i>
          <span class="tipshown">Profile Settings</span>
        <% end %>
      </li>
    </ul>

    <ul class="navbar-nav ms-auto">
      <li class="nav-item">
        <a class="nav-link hoverable" href="#" onclick="scrollToTop(event)">
          <i class="fas fa-circle-arrow-up"></i>
          <span class="tipshown">Go to Top</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link hoverable" href="#comment" onclick="scrollToComments(event)">
          <i class="fas fa-comments"></i>
          <span class="tipshown">Go to Reviews</span>
        </a>
      </li>
      <li class="nav-item">
        <%= link_to articles_path, class: 'nav-link hoverable', method: :get do %>
          <i class="fas fa-search"></i>
          <span class="tipshown">More Movies</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "https://www.imdb.com/find/?q=#{search}&ref_=nv_sr_sm", class: 'nav-link hoverable', target: '_blank' do %>
          <i class="fas fa-film"></i> 
          <span class="tipshown">View Details in IMDb</span>
        <% end %>
      </li>
    </ul>
  </div>
</nav>

<script>
  function scrollToTop(event) {
    event.preventDefault(); // Prevent the default anchor behavior
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  function scrollToComments(event) {
    event.preventDefault(); // Prevent the default anchor behavior
    document.getElementById('comment').scrollIntoView({ behavior: 'smooth' });
  }
</script>


